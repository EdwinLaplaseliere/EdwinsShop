{{!-- This file is the first one to be called when the program starts. 
It is built using HTML and Bootstrap as well as some inline css
It implements handlebars by passing in variables in the curly brackets
--}}
<h3>{{viewTitle}}</h3>

{{!-- this form allows the user to add a new item --}}

<form action="/item" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{item._id}}">
    <div class="form-group">
        <label>Item</label>
        <input type="text" class="form-control" name="item" placeholder="Classic Glazed" value="{{item.item}}">
        <div class="text-danger">
            {{item.itemError}}</div> 
    </div>
    <div class="form-group">
        <label>Price</label>
        <input type="text" class="form-control" name="price" placeholder="3.00" value="{{item.price}}">
        <div class="text-danger">
            {{item.priceError}}</div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Category</label>
            {{!-- these are the four categories  --}}
            <select class="form-control" name="category">
                 <option value="Donuts">Donuts</option>
                 <option value="Hot Chocolates">Hot Chocolates</option>
                 <option value="Coffees">Coffees</option>
                 <option value="Combos">Combos</option>
             </select>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info" style="background-color:#3CB371; border: none"><i class="fa fa-database"></i> Save</button>
        <a class="btn btn-secondary" href="/item/list" style="float:right; border: none"><i class="fa fa-list-alt"></i> See all items</a>
    </div>
</form> 
